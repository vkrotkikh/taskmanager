<div class="popup-container">

<h2>Add user to project</h2>

<%= simple_form_for [@project, @projects_user] do |f| %>
	<%= f.select :user_id, User.pluck(:name, :id) %>
	<div class="clearfix">
		<%= f.button :submit, class:"pull-right btn-info" %>
	</div>
<% end %>
<div class="links-row">
	<%= link_to '← Back to Projects', projects_path %>
</div>
</div>
