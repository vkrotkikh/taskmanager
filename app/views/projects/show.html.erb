<div class="project-container container">
<ul class="main-menu">
  <li>
    <%= link_to '← Back to Projects', projects_path %>
  </li>
  <% if !@project.projects_users.pluck(:user_id).include?(current_user.id) %>
  <li>|</li>
  <li><%= link_to 'Share Project', new_project_projects_user_path(@project) %></li>
  <% end %>
  <li>
    <%= link_to 'Log Out', destroy_user_session_path, :method => :delete, class:"btn pull-right" %>
  </li>
</ul>
<h2><%= @project.name %></h2>
<ul class="proj-info-list">
  <li><b>Creator's email:</b> <%= @projectOwnerEmail %></li>
</ul>

<table class="table tasks-table">
<th class="col-id">Id</th>
<th class="col-name">Name</th>
<th colspan="2" class="col-desc">
	<%= link_to 'Add New task', new_project_task_path(@project.id), class:"pull-right" %>
	Short Description
 </th>
	<% @tasks.each do |task| %>
		<tr>
			<td><%= task.id %></td>
			<td><%= link_to task.name, project_task_path(@project.id, task.id) %></td>
			<td><%= task.description %></td>
		</tr>
	<% end %>
</table>

<div>
</div>
</div>
