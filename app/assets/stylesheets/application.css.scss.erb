body {
	background:url(asset-path('skulls.png'));
	color:#4f4f4f;
}


/*%%%%%%%%%%%%%% DEVISE STYLES %%%%%%%%%%%%%%*/
 
.popup-container {
	padding:20px 20px 10px 20px;
	-moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;
	position:absolute;
	left:0;
	right:0;
	width: 260px;
	margin: 60px auto 0;
	background: #fff;
	border-radius: 4px;
	box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
}

.congrat {
	padding-bottom:30px;
}

.popup-container form {
	margin:0;
}

.links-row {
	text-align:right;
	color:#0088cc;
	line-height:1.5;
	margin-top: 10px;
}

.user_remember_me {
	padding:5px 0;
}

.sign-in-btn {
	float:right;
}

body h2 {
	margin-top:0;
	font-size:21px;
}

form .form-actions {
	background:none;
	border:none;
	margin:0;
}

p.alert,
p.notice {
	margin:0;
	-moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;
	padding:0;
	border:0;
	text-indent:10px;
	line-height:3;
	color:red;
	font-size:14px;
	border-radius:0;
	box-shadow: inset 0px -1px 6px -2px rgba(0,0,0,0.3);
	background-color: #fcf8e3;
}

p.notice {
	color:green;
}

body > p {
	margin:0;
}


/*%%%%%%%%%%%%%% MAIN MENU %%%%%%%%%%%%%%*/

.main-menu {
	float:right;
	padding: 5px 7px 0 0;
	margin:0;
}

.main-menu li {
	display:inline-block;
	vertical-align: middle;
}


/*%%%%%%%%%%%%%% FORM SETTINGS %%%%%%%%%%%%%%*/

.error {
	color:red;
}

.input input {
	margin-bottom:0 !important;
}

.input {
	margin-bottom:10px;
}

/*%%%%%%%%%%%%%% PROJECT PAGE %%%%%%%%%%%%%%*/


.project-container { 
	padding:20px 20px 10px 20px;
	-moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;
	background: #fff;
	border-radius: 4px;
	box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
	margin-top:60px;
}

.project-table .col-id,
.project-table .col-edit,
.project-table .col-delete  {
	width:10%;
}

.project-table .col-name {
	width:70%;
}

table.table th {
	border-top:none;
}

.proj-info-list {
	margin:0 0 10px 0;
	padding:0;
}

.proj-info-list li {
	display:inline-block;
}


.tasks-table .col-id {
	width:10%;
}

.tasks-table .col-name {
width:30%;
}

.tasks-table .col-desc {
width:60%;
}

/*%%%%%%%%%%%%%% TASK PAGE %%%%%%%%%%%%%%*/

.task-info {
	padding-top:5px;
}

.task-buttons-row {
	padding:0;
	margin:0;
}

.task-buttons-row li:first-child {
float:right;
}

.task-buttons-row li {
display:inline-block;
}